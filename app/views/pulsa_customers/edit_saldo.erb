<%= popup_title "Edit Saldo Pulsa " %>

<div id="RB_body" style="width: 300px;">
  <%= javascript_include_tag :defaults %>
  <% form_tag :action => 'update_last_saldo' do %>
    <p>
      Last Saldo <br/>
      <%= text_field_tag :last_saldo,@pulsa.last_saldo  %>
      <%= hidden_field_tag :id,@pulsa.id  %>
    </p>

    <p>
      <%= submit_tag "Update" %>
    </p>
  <% end %>
</div>
