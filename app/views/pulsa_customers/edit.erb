<%= popup_title "Edit Masa Aktif " %>

<div id="RB_body" style="width: 300px;">
  <%= javascript_include_tag :defaults %>
  <% form_for(@pulsa_customer) do |f| %>
    <%= f.error_messages %>
    <p>
      Aktif <br/>
      <%= f.date_splicer :aktif, :default_to_now => true %>
    </p>

    <p>
      <%= f.submit "Update" %>
    </p>
  <% end %>
</div>