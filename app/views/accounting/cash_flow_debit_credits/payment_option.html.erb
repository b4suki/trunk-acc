<div class="div_top_btn">
  <%= link_to("Kembali",nota_orders_path,{:class => "a_top_btn"}) %>
</div>
<div class="clear_right"></div>
<table class="main_table" cellpadding="0" cellspacing="0" width="600">
  <tr class="grid_1">
    <td style="width :100px; text-align :center;">No Rekening</td>
    <td style="width :200px; text-align :center;">Keterangan</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
  </tr>
  <% @payment_options.each do |payment_option| %>
    <%= display_single_debit_credit_type "Opsi Pembayaran #{payment_option.description}", AccountingSaleDebitCredit.find(:first, :conditions => ["account_type=?", payment_option.account_type]), payment_option.account_type %>
  <% end %>

  <tr class="grid_footer">
    <td colspan="4" valign="center">
      <%= link_to_remote_redbox("Input Opsi Pembayaran", {:url => {:action => :new, :account_type => AccountingSaleDebitCredit.get_new_payment_code}}, {:class => "a_add"}) %>
    </td>
  </tr>
</table>