<%= popup_title "Pembayaran Piutang" %>

<div id="RB_body" style="width: 500px;">
<% form_for(:receivable, @receivable, :url => {:action => :create_payment}) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'form_payment', :locals => { :f => f } %>
  <div style="clear: both;"></div>
  <%= f.submit "Simpan" %>
<% end %>
</div>