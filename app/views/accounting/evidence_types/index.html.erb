<h1>Listing evidence_types</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% for evidence_type in @evidence_types %>
  <tr>
    <td><%=h evidence_type.name %></td>
    <td><%=h evidence_type.description %></td>
    <td><%= link_to 'Show', accounting_evidence_type_path(evidence_type) %></td>
    <td><%= link_to 'Edit', edit_accounting_evidence_type_path(evidence_type) %></td>
    <td><%= link_to 'Destroy', accounting_evidence_type_path(evidence_type), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New evidence_type', new_accounting_evidence_type_path %>
