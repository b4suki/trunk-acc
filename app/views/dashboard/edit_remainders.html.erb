<%=  popup_title "Edit Remainder" %>
<div style="max-height:400px; overflow-x:hidden;overflow-y:auto;">
<div id="RB_body" style="width: 400px;">
<% form_for(:remainder, @remainder, :url => remainder_path(@remainder), :html=> {:method=>'put'})  do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'form_edit_remainder', :locals => { :f => f } %>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>
</div>
</div>