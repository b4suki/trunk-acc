<div id="search">
  <table class="search_table" cellpadding="2" cellspacing="0" width="200">
    <tr><th colspan="2">Utang ke Vendor</th></tr>
    <tr><td>Bulan</td><td><%= Time.now().strftime('%B')%></td></tr> <br/>
    <tr><td>Tahun</td><td><%= Time.now().strftime('%Y') %></td></tr>
  </table>
</div>
<table id="t1" class="main_table" cellpadding="0" cellspacing="0" width="400px;">
  <tr class="grid_1">
    <th>No</th>
    <th>Nama Vendor</th>
    <th>Jumlah Utang</th>
  </tr>
  <% if @vendor_payables and @vendor_payables.length > 0 %>
    <% @vendor_payables.each_with_index do |vendor_payable, count| %>
      <% if vendor_payable.sum_of_payable.to_i > 0 %>
        <tr class=<%= cycle("grid_2","grid_3") %>>
          <td align="right"><%= count + 1%></td>
          <td align="center"><%= vendor_payable.vendor.name rescue nil %></td>
          <td align="right"><%= vendor_payable.sum_of_payable %></td>
        </tr>
      <% end %>
    <% end %>
  <% else %>
    <tr class='grid_2'><td colspan="3" style="text-align:center;">Tidak ada Data</td></tr>
  <%end%>
</table>
